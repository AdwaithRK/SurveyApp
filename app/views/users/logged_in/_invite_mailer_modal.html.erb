<div class="modal fade" id=<%=survey_link%> tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Invite By Email</h5>
        <h6 class="modal-title"><%=survey_title%><h6>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: surveys_invite_path do |form| %>
          <div class="form-group d-inline-block">
            <%= form.text_field :invitee, placeholder:"Name",class:"form-control", required:true, autofocus:true %>
          </div>
          <div class="form-group d-inline-block">
            <%= form.text_field :email, placeholder:"Email",class:"form-control", required:true, autofocus:true %>
            <%= form.hidden_field :inviter, value: inviter   %>
            <%= form.hidden_field :link, value: survey_link %>
          </div>
          <div class="form-group d-inline-block">
            <%= form.submit "send mail", class: "btn btn-primary close-modal-submit"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>