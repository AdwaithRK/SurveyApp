<div class="front-page">

<div class="sign-up">

<h2  class="sign-up-style" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="form-group">
    <%= f.email_field :email, placeholder: "Name", class: "form-control form-control-sm"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Name", class: "form-control form-control-sm"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
      <%= f.submit "Log in", class:"btn btn-info"  %>
    </span>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>

</div>