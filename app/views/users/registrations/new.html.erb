<div class="front-page">

<div class="sign-up">

<h2 class="sign-up-style">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">
    <%= f.text_field :firstname,  placeholder: "First Name", class: "form-control form-control-sm"%>
  </div>

  <div class="form-group">
    <%= f.text_field :lastname,  placeholder: "Last Name", class: "form-control form-control-sm"%>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autocomplete: "email",  placeholder: "Email" ,class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation",class: "form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <span class="btn btn-info fileinput-button">
      <span>Select pro pic</span>
      <%= f.file_field :avatar, :title => "profile"  ,accept: 'image/jpeg,image/gif,image/png' %>
    </span>
  </div>
 

  <div class="form-group">
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
  </div>

  
<% end %>

<!--  <%= render "users/shared/links" %> -->


</div>


</div>